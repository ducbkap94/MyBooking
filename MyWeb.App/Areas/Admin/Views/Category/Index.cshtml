@using Microsoft.AspNetCore.Mvc.RazorPages
@using MyWeb.Common.Paging
@{
    ViewData["Title"] = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

@model PagedResult<MyWeb.Data.Models.Category>

<div class="row mb-5">
    <div class="col-5">
        <form id="searchForm" class="row">
            <div class="col-md-1"></div>
            <div class="col-md-3 d-flex align-items-center" style="font-size: 18px">
                    Tìm kiếm:
            </div>
            <div class="col-md-8">
                <input type="text" class="w-100 h-100 form-control-sm" id="searchName" name="searchName" onkeyup="searchItem('Category', '#searchName', '#table-container')"
                    placeholder="Nhập tên cần tìm...">
            </div>
            
        </form>
    </div>
    <div class="col-7 d-flex justify-content-end">
        <div class="row">
            <div class="col-md-3 center">
                <!-- Nút mở Modal -->
                <button type="submit" class="btn btn-primary" onclick="openForm('Category','#Modal',0)">
                    Thêm mới
                </button>
            </div>
            <div class="col-md-2 center">
                <!-- Nút Tải lại -->
                <button type="submit" class="btn btn-outline-secondary" onclick="loadPage(1, 10)">
                    Tải lại
                </button>
            </div>
            <div class=" col-md-3 center">
                <!-- Nút Xuất Excel -->
                <button type="submit" class="btn btn-success">
                    Xuất Excel
                </button>
            </div>
            <div class=" col-md-4 center">
                <button type="submit" class="w-100 btn btn-danger" onclick="deleteSelected('Category', '#table-container')">
                Xoá</button>
            </div>
            
        </div>

    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh mục sản phẩm</h4>
                <div class="table-responsive dataTables_wrapper" id="table-container">
                    @await Html.PartialAsync("Partials/_tableCategory", Model);
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="margin-top: 120px;">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin hãng sản xuất</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="ModalBody">
                <!-- Nội dung form sẽ load vào đây -->
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/admin/js/adminCrud.js"></script>
    <script src="~/assets/admin/js/just-validate.production.min.js"></script>

}
